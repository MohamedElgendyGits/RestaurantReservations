<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_view_margin_layout"
        card_view:elevation="@dimen/card_view_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_customer_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_margin_layout"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/first_name_text_size"
                android:textStyle="italic"
                tools:text="First Name" />

            <TextView
                android:id="@+id/textView_customer_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_margin_layout"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/last_name_text_size"
                android:textStyle="italic"
                tools:text="Last Name" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>